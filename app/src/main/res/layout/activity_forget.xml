<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    tools:context="com.jackfruit.transle.Forget">

    <android.support.v7.widget.CardView
        android:id="@+id/otpphn"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="352dp"
            android:layout_height="256dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <EditText
                android:id="@+id/phnfrgt"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignEnd="@+id/textView5"
                android:layout_alignRight="@+id/textView5"
                android:ems="10"
                android:inputType="phone"
                tools:layout_editor_absoluteX="89dp"
                tools:layout_editor_absoluteY="98dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="45dp"
                android:layout_toLeftOf="@+id/phnfrgt"
                android:layout_toStartOf="@+id/phnfrgt"
                android:text="+91"
                android:textAppearance="@style/TextAppearance.Design.Tab"
                tools:layout_editor_absoluteX="29dp"
                tools:layout_editor_absoluteY="123dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="326dp"
                android:layout_height="43dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="47dp"
                android:text="Enter Your Mobile Number"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorPrimary"
                tools:layout_editor_absoluteX="138dp"
                tools:layout_editor_absoluteY="113dp" />

            <Button
                android:id="@+id/getotp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/phnfrgt"
                android:layout_alignRight="@+id/phnfrgt"
                android:layout_below="@+id/phnfrgt"
                android:layout_marginTop="25dp"
                android:text="Get OTP"

                tools:layout_editor_absoluteX="189dp"
                tools:layout_editor_absoluteY="220dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/getotp"
                android:layout_alignStart="@+id/getotp"
                android:layout_below="@+id/getotp"
                android:layout_marginLeft="41dp"
                android:layout_marginStart="41dp"
                android:layout_marginTop="44dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/otpcard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="284dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="Enter OTP"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:ems="10"
                android:hint="OTP"
                android:inputType="number" />

            <Button
                android:id="@+id/confrmotp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/otp"
                android:layout_alignRight="@+id/otp"
                android:layout_below="@+id/otp"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                android:text="Next" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/confrmotp"
                android:layout_marginTop="31dp"
                android:layout_toEndOf="@+id/textView6"
                android:layout_toRightOf="@+id/textView6" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
